extends layout

block content
	body.leavecomment-bg
		div.nav
			ul
				a(href='./css/stylesheets/images/logo.small.png')
				img#logo(src='./css/stylesheets/images/logo.small.png' alt='Article Logo')
				if user
					li
						a(href='/profile') Your profile
					li
						a(href='/yourposts') Your posts
					li
						a(href='/new') Create a new post
					li
						a(href='/posts') Blogfeed
					li
						a(href='/logout') Log out
				else
					li
						a(href='/') Home/Log in
					li
						a(href='/posts') Blogfeed

					

		if user 
			p #{user.username}
			
		p #{blogpostId}
		p #{title}
		p #{body}

		div
			h4 Leave a comment
				form(action='/comments' method='post')
					textarea(minlength='5' rows="10" cols="25" name='body' placeholder='Comment' required)
					br
					input.btn(type='submit' value='Submit comment' id='submit')
					input(type='hidden' name='postId' value= blogpostId)
					br
					h4 Comments:
						if comments
							each comment in comments
								p #{comment.body}
									//-each user in blogpost.users
										p #{user.username}
		
					