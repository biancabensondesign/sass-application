extends layout

block content
	body.yourposts-bg
		div.nav
			ul
				a(href='./css/stylesheets/images/logo.small.png')
				img#logo(src='./css/stylesheets/images/logo.small.png' alt='Article Logo')
				if user
					li
						a(href='/profile') Your profile
					li
						a(href='/yourposts') Your posts
					li
						a(href='/new') Create a new post
					li
						a(href='/posts') Blogfeed
					li
						a(href='/logout') Log out
				else
					li
						a(href='/') Home/Log in
					li
						a(href='/posts') Blogfeed

					

		if user 
			p #{user.username}
		h1 Your ARTicle blogposts.
		p= message
		h2 Here you can view all the posts you have entered.
		div.container
				h3 You have entered #{blogposts.length} blogposts!
				each post in blogposts
					h4 Blogpost #{post.id}
					label Post title
					p #{post.title}
					label Post content
					p #{post.body}
		

