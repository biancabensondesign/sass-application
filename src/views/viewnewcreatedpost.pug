extends layout

block content
	body.viewnewcreatedpost-bg
		div.nav
			ul
				a(href='./css/stylesheets/images/logo.small.png')
				img#logo(src='./css/stylesheets/images/logo.small.png' alt='Article Logo')
				if user
					li
						a(href='/profile') Your profile
					li
						a(href='/yourposts') Your posts
					li
						a(href='/new') Create a new post
					li
						a(href='/posts') Blogfeed
					li
						a(href='/logout') Log out
				else
					li
						a(href='/') Home/Log in
					li
						a(href='/posts') Blogfeed

					

		if user 
			p #{user.username}
			
		h1 Blog Post
		h3 Post title:#{title}
		p Post: #{body}
		p Username: #{userValue.username}
		p Email: #{userValue.email}
		p Blogpost ID: #{id}